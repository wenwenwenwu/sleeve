/* components/realm/index.wxss */
.container{
  background-color: white;
  padding: 30rpx;
}

.sku-preview{
  display: flex;
  flex-direction: row;
}

.sku-description{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 40rpx;
}

.sku-img{
  width: 160rpx;
  height: 160rpx;
}

.discount-price{
  margin-left: 20rpx;
}

.price-row{
  display: flex;
  flex-direction: row;
  align-items: baseline;
}

.sku-pending{
  font-size: 20rpx;
}

.sku-pending>text:nth-child(1){
  color: #999999;
}

.sku-pending>text:nth-child(2){
  color: #666666;
}

.hl{
  background-color: #e9e9e9;
  height: 2rpx;
  margin-top: 30rpx;
}

.stock{
  color: #999999;
  font-size: 20rpx;
  margin-left: 40rpx;
}

.stock-pinch{
  color: #d20109;
  font-size: 20rpx;
  margin-left: 30rpx;
}

