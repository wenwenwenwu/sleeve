/* components/realm/index.wxss */
.container {
  background-color: white;
  width: 750rpx;
  max-height: 1500rpx;
  min-height: 700rpx;
}

.inner-container{
  padding: 30rpx 30rpx 0rpx 30rpx;
}

.sku-preview {
  display: flex;
  flex-direction: row;
}

.sku-description {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 40rpx;
}

.sku-img {
  width: 160rpx;
  height: 160rpx;
}

.discount-price {
  margin-left: 20rpx;
}

.price-row {
  display: flex;
  flex-direction: row;
  align-items: baseline;
}

.sku-pending {
  font-size: 20rpx;
}

.sku-pending>text:nth-child(1) {
  color: #999999;
}

.sku-pending>text:nth-child(2) {
  color: #666666;
}

.hl {
  background-color: #e9e9e9;
  height: 2rpx;
  margin-top: 30rpx;
}

.stock {
  color: #999999;
  font-size: 20rpx;
  margin-left: 40rpx;
}

.stock-pinch {
  color: #d20109;
  font-size: 20rpx;
  margin-left: 30rpx;
}

.counter-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin: 34rpx 0rpx 200rpx;
}

.counter-container text {
  color: #555555;
  font-size: 24rpx;
}

.bottom-btn {
  background-color: #333333;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100rpx;
  position: absolute;
  bottom: 0;
}

.out-stock {
  background-color: #dcebe6;
}

.bottom-btn text {
  color: #ffffff;
}