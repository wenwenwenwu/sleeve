/* components/spu-description/index.wxss */
.container{
  width: 100%;
  box-sizing: border-box;
  background-color: white;
  padding: 34rpx 30rpx 26rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.left{
  display: flex;
  flex-direction: column;
}

.tags{
  display: flex;
  flex-direction: row;
}

.l-tag{
  margin-right: 6rpx !important;
}

.subtitle{
  color: #999999;
  font-size: 28rpx;
  font-weight: 400;
  margin-top: 40rpx;
  margin-bottom: 16rpx;
}

.price-row{
  display: flex;
  align-items: baseline;
}

.l-price-unit{
  margin-right: 14rpx !important;
}

.discount-price{
  margin-left: 20rpx;
  margin-right: 80rpx;
}

.right{
  width: 78rpx;
  height: 120rpx;
  border-left: 2rpx dashed #f5f5f5;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  margin-left: 20rpx;
}

.inner{
  background-color: #dcebe6 !important;
  width: 50rpx;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

}

.inner text{
  color: #157658;
  font-size: 20rpx;
}

.discount-tag{
  position: relative !important;
  bottom: 4rpx;
  width: 50rpx;
  border-radius: 20rpx !important;
}
