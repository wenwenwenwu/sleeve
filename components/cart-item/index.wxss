/* components/cart-item/index.wxss */
.container {
  background-color: white;
  box-sizing: border-box;
  width: 750rpx;
  height: 220rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: row;
  border-top: 2rpx solid #f3f3f3;
}

.checkbox-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
}

.sku-container {
  flex: 1;
  display: flex;
  flex-direction: row;
}

.image-container {
  position: relative;
  height: 160rpx;
  width: 160rpx;
  margin-right: 60rpx;
}

.image {
  width: 100%;
  height: 100%;
}

.image-sold-out{
  color: #ffffff;
  background-color: #157658;
  opacity: 0.5;
  height: 100%;
  width: 100%;
  position: absolute;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.image-stock-pinch{
  position: absolute;
  width: 100%;
  height: 30rpx;
  background-color: #157658;
  opacity: 0.7;
  border-radius: 4rpx;
  color: #ffffff;
  font-size:22rpx;
  bottom: 0;
  display:flex;
  flex-direction:row;
  align-items:center;
  justify-content:center;
}

.image-stock-pinch text{
  letter-spacing: 4rpx;
}

.right{
  flex: 1;
  display:flex;
  flex-direction:column;
  justify-content: space-between;
}

.description-container{
  display:flex;
  flex-direction:column;
}

.title-container{
  display:flex;
  flex-direction:row;
  align-items: center;
  line-height: 28rpx;
  margin-bottom: 6rpx;
}

.discount-tag{
  margin-right:16rpx;
  font-size: 18rpx;
  padding-left: 6rpx;
  padding-right:6rpx;
  width:36rpx !important;
  flex-wrap: nowrap !important;
}


.title{
  font-weight: 400;
  font-size:26rpx;
  color:#333333;
  line-height: 40rpx;
}

.spec{
  line-height: 20rpx;
}

.spec text{
  display: inline-flex;
  padding-left:10rpx;
  padding-right:10rpx;
  flex-direction: row;
  align-items: center;
  height: 36rpx;
  background-color: #f3f3f3;
  color:#999999;
  font-size:20rpx;
}

.price-container{
  display:flex;
  flex-direction:row;
  justify-content: space-between;
  align-items: center;
}

.slide{
  color: #ffffff;
  background-color:#9E2731;
  width: 200rpx;
  height: 220rpx;
  display:flex;
  flex-direction:row;
  align-items:center;
  justify-content:center;
}
