/* pages/cart/index.wxss */
.container{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.empty-container{
  background-color: #f5f5f5 !important;
  display: flex;
  flex-direction: column;
  width: 750rpx !important;
  height: 800rpx;
}

.empty-image{
  width: 120rpx !important;
  height: 120rpx !important;
}

.empty-description{
  color: #333333 !important;
  margin-top: 40rpx !important;
}

.empty-button{
  background-color: #157658 !important;
  border-radius: 2rpx !important;
  margin-top: 50rpx !important;
}

.total-container{
  background:rgba(255,255,255,1);
  box-shadow:0px 0px 20px 0px rgba(210,210,210,0.5);
  box-sizing: border-box;
  width: 100%;
  height: 88rpx;
  padding-left:30rpx;
  position: fixed; 
  bottom: 0;
  display:flex;
  flex-direction:row;
  justify-content: space-between;
  z-index: 99;
}

.data-container{
  display:flex;
  flex: 1;
  flex-direction:row;
  align-items: center;
  justify-content: space-between;
}

.checkbox-container{
  display:flex;
  flex-direction:row;
  align-items:center;
}

.checkbox-container > text{
  color: #333333;
  font-size:24rpx;
  margin-left: 30rpx;
}

.price-container{
  display:flex;
  flex-direction:row;
  align-items: center;
}

.price-container > text{
  color: #333333;
  font-size: 28rpx;
  margin-right:24rpx;
}


.settlement-btn{
  background-color: #157658;
  color: #ffffff;
  font-size:28rpx;
  width: 200rpx;
  height: 100%;
  margin-left: 24rpx;
  display:flex;
  flex-direction:row;
  align-items:center;
  justify-content:center;
}

.settlement-btn > text{
  /*width: 90%;*/
  max-width: 190rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;

  /*display: -webkit-box;*/
  /*width: 180rpx;*/
  /*-webkit-box-orient: vertical;*/
  /*-webkit-line-clamp: 1;*/
  /*overflow: hidden;*/
}


.status-btn{
  border-radius: 1rpx !important;
  background-color: #157658 !important;
}

.disabled{
  opacity: 0.5;
}