/* pages/detail/index.wxss */

.top{
  width: 750rpx;
  height: 680rpx;
}

.tabbar{
  position: fixed;
  bottom: 0rpx;
}

.sku-pending{
  background-color: white;
  color: #333333;
  font-size:28rpx;
  box-sizing: border-box;
  width: 750rpx;
  height: 80rpx;
  padding: 0rpx 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin: 10rpx 0rpx;
}

.coupon-container{
  background-color: #ffffff;
  display:flex;
  flex-direction:row;
  width: 100%;
  height: 88rpx;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.coupon-left {
  display: flex;
  flex-direction: row;
  /*margin-left:30rpx;*/
}

.coupon-left > c-coupon-mini:first-child{
  margin-right: 20rpx;
}

.coupon-right{
  display:flex;
  flex-direction:row;
  align-items: center;
}

.coupon-right > text{
  font-size:24rpx;
  color: #333333;
  margin-right:20rpx ;
  margin-top:-4rpx;
}

.spcs>text:nth-child(1){
  color: #999999;
  font-size: 24rpx;
}

.specs>text:nth-child(2){
  color: #157658;
  font-size: 24rpx;
}

.explain{
  background-color: white;
  padding: 10rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.detail-img{
  width: 100%;
}